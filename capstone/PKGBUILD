# Maintainer: Michael Gehring <mg@ebfe.org>

pkgname=capstone
pkgver=2.0
pkgrel=1
pkgdesc='Capstone is a lightweight multi-platform, multi-architecture disassembly framework.'
arch=('i686' 'x86_64')
depends=('glibc')
license='BSD'
url='http://www.capstone-engine.org'

source=(http://www.capstone-engine.org/download/2.0/$pkgname-$pkgver.tgz)
sha256sums=('5d871b1e52047d1b2882bbcc6f049205ba6acc8d55d746937d22af5d0b33fa9e')

build() {
	cd $pkgname-$pkgver
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR="$pkgdir" LIBDIR="$pkgdir"/usr/lib install
}

