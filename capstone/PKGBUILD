# Maintainer: Michael Gehring <mg@ebfe.org>
pkgname=capstone
pkgver=2.1.2
pkgrel=2
pkgdesc='Capstone is a lightweight multi-platform, multi-architecture disassembly framework.'
arch=('i686' 'x86_64')
depends=('glibc')
options=('staticlibs')
license=('BSD')
url='http://www.capstone-engine.org'

source=("http://www.capstone-engine.org/download/$pkgver/$pkgname-$pkgver.tgz")
sha256sums=('49e41d662c5ed4dcd391ec4cfce75fb31ca4bfd245eba9e8f0cb69d6f6e8d7cc')

build() {
	cd $pkgname-$pkgver
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR="$pkgdir" LIBDIR="$pkgdir"/usr/lib install
	install -D -m644 LICENSE.TXT "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

