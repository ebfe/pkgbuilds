# Maintainer: Michael Gehring <mg@ebfe.org>
pkgname=libmill
pkgver=0.13.beta
_pkgver=0.13-beta
pkgrel=1
pkgdesc="Go-style concurrency in C"
arch=('i686' 'x86_64')
url="http://libmill.org"
options=('staticlibs')
depends=('glibc')
license=('MIT')
source=("http://libmill.org/$pkgname-$_pkgver.tar.gz")

build() {
	cd "$srcdir/$pkgname-$_pkgver"
	./configure --prefix=/usr
	make
	make check
}

package() {
	cd "$srcdir/$pkgname-$_pkgver"
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

sha1sums=('e53fba770f5f5b9a339b33d405f5157ded8ce1db')
