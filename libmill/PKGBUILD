# Maintainer: Michael Gehring <mg@ebfe.org>
pkgname=libmill
pkgver=0.17.rc
_pkgver=0.17-rc
pkgrel=1
pkgdesc="Go-style concurrency in C"
arch=('i686' 'x86_64')
url="http://libmill.org"
options=('staticlibs')
depends=('glibc')
license=('MIT')
source=("http://libmill.org/$pkgname-$_pkgver.tar.gz")
sha1sums=("cc640b29176ea4e3356a515ff20cd44b1493a57f")

build() {
	cd "$srcdir/$pkgname-$_pkgver"
	./configure --prefix=/usr
	make
	make check
}

package() {
	cd "$srcdir/$pkgname-$_pkgver"
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
