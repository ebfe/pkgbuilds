# Maintainer: Michael Gehring <mg@ebfe.org>
pkgname=libmill
pkgver=0.12.beta
_pkgver=0.12-beta
pkgrel=1
pkgdesc="Go-style concurrency in C"
arch=('i686' 'x86_64')
url="http://libmill.org"
options=('staticlibs')
depends=('glibc')
license=('MIT')
source=("http://libmill.org/$pkgname-$_pkgver.tar.gz")
sha1sums=("a0e82e71eb2fb3fe423dde18b20bee4bedd36e38")


build() {
	cd "$srcdir/$pkgname-$_pkgver"
	./configure --prefix=/usr
	make
	# make check
}

package() {
	cd "$srcdir/$pkgname-$_pkgver"
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}


